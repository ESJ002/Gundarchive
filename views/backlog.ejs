<h1>BACKLOG</h1>

<% if (kits.length === 0) {%>

    <h2>BUY SOME KITS!</h2>

<%}%>

<div class="backlog-container">

    <% for (let kit of kits) {%>
        <a href="/kit/<%=kit.sku%>">
        <div class="backlog-kit-container">

            <div class="backlog-image-container">
                <img src="<%=kit.image_url%>" alt="<%=kit.name%>">
            </div>  

            <div class="info-container">

                <% let kitName = `${kit.grades_abbreviation} ${kit.name}`
                if (kitName.length > 28) {
                    kitName = kitName.substring(0, 26) + '...'
                } %>
                <p class="kit-name"><%=kitName%></p>

                <div class="logos">

                    <div class="grade-logo">
                        <img src="<%= kit.grades_logo%>" alt="<%= %>">
                    </div>

                    <div class="series-logo">
                        <img src="<%= kit.series_logo%>" alt="<%= %>">
                    </div>

                </div>

            </div>

            <div class="buttons">

                <form action="/completed" method="post" class="complete-add">
                    <input type="hidden" name="kitID" value ="<%=kit.id%>">
                    <input type="hidden" name="sku" value ="<%=kit.sku%>">
                    <input type="hidden" name="backID" value ="<%=kit.backlog_id%>">
                    <input type="hidden" name="fromBacklog" value ='true'>
                    <button class="backlog-button">MOVE TO COMPLETED</button>
                </form>

                <form action="/backlog?_method=delete" method="post" class="backlog-remove"> 
                    <input type="hidden" name="backID" value ="<%=kit.backlog_id%>" >
                    <button class="backlog-button">REMOVE FROM BACKLOG</button>
                </form>

            </div>

        </div>
        </a>
    <% } %>

</div>




